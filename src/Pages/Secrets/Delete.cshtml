@page
@model GitHubRepoSecrets.Pages.Secrets.DeleteModel

@{
    ViewData["Title"] = "Delete Secret";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Secret</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Secret.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Secret.Name)
        </dd>
        <dt class="col-sm-2">
            Updated At
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Secret.UpdatedAt)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Owner" />
        <input type="hidden" asp-for="Repo" />
        <input type="hidden" asp-for="SecretName" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-owner="@Model.Owner" asp-route-repo="@Model.Repo">Back to List</a>
    </form>
</div>
